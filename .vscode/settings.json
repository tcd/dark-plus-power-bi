{
    "explorer.copyRelativePathSeparator": "/",
    // "files.associations": {
    //     "*.jsonc": "json comments",
    // },
    "json.schemas": [
        {
            "fileMatch": [
                "*.theme.json",
                "theme.jsonc",
                "out/dark-plus-report-theme.json"
            ],
            // "url": "https://raw.githubusercontent.com/tcd/dark-plus-power-bi/master/schema/power-bi-report-theme.schema.json",
            // "url": "./src/json/schema/power-bi-report-theme.schema.json",
            "url": "./out/report-theme.schema.json",
            "schema": {
                "allowTrailingCommas": true
            }
        },
        {
            "fileMatch": [
                "*.jsonc",
                "src/json/schema/card-properties.schema.jsonc",
                "src/json/schema/schema.jsonc",
            ],
            "schema": {
                "allowTrailingCommas": true
            }
        },
    ],
    // =========================================================================
    // Better Align
    // =========================================================================
    "alignment.surroundSpace": {
        "colon":      [-1, 1],  // The first number specify how much space to add to the left, can be negative. The second number is how much space to the right, can be negative.
        "assignment": [-1, 1],  // The same as above.
        "arrow":      [-1, 1],  // The same as above.
        "comment":    1,        // Special how much space to add between the trailing comment and the code. If this value is negative, it means don't align the trailing comment.
    },
    // =========================================================================
    // Colorize
    // =========================================================================
    "colorize.languages": [
        "javascript",
        "json",
        "jsonc",
    ],
    "colorize.colorized_variables": [
        "LESS",
    ],
}
