{
  "private": true,
  "name": "dark-plus-power-bi",
  "version": "1.0.0",
  "description": "Power BI report theme based on Visual Studio Code's \"Dark+ (default dark)\" color theme.",
  "author": "Clay Dunston <dunstontc@gmail.com>",
  "homepage": "https://github.com/tcd/dark-plus-power-bi#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tcd/dark-plus-power-bi.git"
  },
  "main": "./src/js/index.js",
  "watch": {
    "build": {
      "patterns": [
        "src/json/theme.jsonc",
        "src/json/schema/report-theme.schema.jsonc",
        "theme.jsonc",
        "report-theme.schema.jsonc"
      ],
      "verbose": true,
      "runOnChangesOnly": true
    }
  },
  "scripts": {
    "test": "echo 'no tests'",
    "start": "node ./src/js/index.js",
    "fix": "npm run fix_schema && npm run fix_theme",
    "fix_theme": "fixjson ./src/json/theme.jsonc > out/dark-plus-report-theme.json",
    "fix_schema": "fixjson ./src/json/schema/report-theme.schema.jsonc > out/report-theme.schema.json",
    "build": "node ./src/js/index.js",
    "watch": "CHOKIDAR_USEPOLLING=true npm-watch build"
  },
  "dependencies": {
    "fixjson": "^1.1.2",
    "json5": "^2.2.0",
    "npm-watch": "^0.11.0",
    "pkg-dir": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.10.2"
  }
}
